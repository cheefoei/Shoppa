<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.shoppa.shoppa.ShopActivity">

    <TextView
        android:id="@+id/tv_cart_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@string/font_family_light"
        android:text="@string/string_shop_empty_cart"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/layout_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            app:contentPadding="@dimen/padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="120dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/string_shop_product_img"
                    android:src="@drawable/product1" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/padding"
                    android:paddingRight="@dimen/padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@string/font_family_condensed"
                        android:text="Tomato Sauce"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@string/font_family_regular"
                        android:text="RM 17.98"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@string/font_family_regular"
                        android:text="Quantity: 2"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btn_product_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="end"
                        android:background="#424242"
                        android:text="@string/string_shop_product_edit"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_product_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="top|end"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/string_shop_product_delete"
                android:src="@drawable/ic_clear_black_24dp" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shop_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border_top"
        android:orientation="horizontal"
        android:padding="@dimen/padding"
        android:weightSum="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:fontFamily="@string/font_family_regular"
            android:text="@string/string_shop_total"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:fontFamily="@string/font_family_condensed"
            android:text="RM 17.98"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_checkout"
            android:layout_width="64dp"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:layout_weight="1.3"
            android:background="@color/colorButtonPrimary"
            android:text="@string/string_shop_checkout" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/shop_bottom"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/colorAccent2"
        app:srcCompat="@drawable/ic_add_shopping_cart_white_24dp" />

</RelativeLayout>
